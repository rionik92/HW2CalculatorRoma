<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity_Launcher">
    <TextView
        android:id="@+id/text_view1"
        android:layout_width="match_parent"
        android:text="Последнее действие"
        android:textSize="35sp"
        android:textColor="@color/colorDark"
        android:gravity="center_horizontal"
        android:layout_height="50sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/last_result_field_view"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="580sp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/text_view1"
        />

    <Button
        android:id="@+id/button_calculator_open"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:text="Посчитать"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="onCalculatorEnterForResult"
        />
</androidx.constraintlayout.widget.ConstraintLayout>